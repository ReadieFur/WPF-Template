<UserControl x:Class="WPFTemplate.TemplateWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTemplate"
             xmlns:localStyles="clr-namespace:WPFTemplate.Styles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <localStyles:XAML></localStyles:XAML>
    </UserControl.DataContext>
    <Grid>
        <Border x:Name="windowBorder" Visibility="Hidden" BorderBrush="{Binding accent}" BorderThickness="1,1,1,1"/>
    </Grid>
</UserControl>
