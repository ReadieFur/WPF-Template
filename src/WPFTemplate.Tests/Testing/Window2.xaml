<Window x:Class="WPFTemplate.Tests.Testing.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate.Tests.Testing"
        xmlns:templateControls="clr-namespace:WPFTemplate.Controls;assembly=WPFTemplate"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="400">
    <ListBox x:Name="lb">
        <ListBoxItem x:Name="lbi">
            <templateControls:Expander x:Name="exp" IsExpanded="True">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Background="Red"/>
                    <Grid Grid.Column="1" Background="Green"/>
                </Grid>
            </templateControls:Expander>
        </ListBoxItem>
    </ListBox>
</Window>
